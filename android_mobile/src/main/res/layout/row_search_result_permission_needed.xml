<?xml version="1.0" encoding="utf-8"?>
<com.alexstyl.specialdates.ui.widget.ForegroundLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:minHeight="56dp"
    android:orientation="horizontal"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    app:foreground="?android:attr/selectableItemBackground">

    <ImageView
        android:id="@+id/search_result_avatar"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/ic_contacts"
        android:tint="?colorAccent" />

    <TextView
        android:id="@+id/search_result_contact_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:fontFamily="sans-serif-medium"
        android:text="@string/Search_through_your_devices_contacts" />

</com.alexstyl.specialdates.ui.widget.ForegroundLinearLayout>

